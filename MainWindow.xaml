<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="Hello" Height="200" Width="347">
	<Grid>
		<Label x:Name="label" Content="Please enter your name" HorizontalAlignment="Left" Margin="54,47,0,0" VerticalAlignment="Top" Height="29" Width="135" FontSize="12"/>
		<TextBox x:Name="userName" HorizontalAlignment="Left" Height="23" Margin="54,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
		<Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="212,81,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="ok_Click"/>

	</Grid>
</Window>
